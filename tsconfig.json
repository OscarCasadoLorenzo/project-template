{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "electron/**/*",
    "backend/**/*",
    "renderer/**/*",
    "apps/frontend/services",
    "apps/frontend/hooks",
    "apps/backend-rest/**/*"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
